<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Login" >

    <ImageView
        android:id="@+id/image_1"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:src="@drawable/qq" />

    <RelativeLayout
        android:id="@+id/ll"
        android:layout_width="400dp"
        android:layout_height="300dp"
        android:layout_below="@+id/image_1"
        android:layout_centerHorizontal="true"
        android:background="@drawable/shape_box" >

        <EditText
            android:id="@+id/et_registerName"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:background="@drawable/shape_edit"
            android:ems="11"
            android:hint="@string/username"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/et_registerPwd"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:layout_alignLeft="@+id/et_registerName"
            android:layout_alignRight="@+id/et_registerName"
            android:layout_below="@+id/et_registerName"
            android:layout_marginTop="0.5dp"
            android:background="@drawable/shape_edit"
            android:ems="11"
            android:hint="@string/password"
            android:inputType="textPassword" />

        <EditText
            android:id="@+id/et_rePwd"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:layout_alignLeft="@+id/et_registerName"
            android:layout_alignRight="@+id/et_registerName"
            android:layout_below="@+id/et_registerPwd"
            android:layout_marginTop="0.5dp"
            android:background="@drawable/shape_edit"
            android:ems="11"
            android:hint="Repeat Password"
            android:inputType="textPassword" />

        <EditText
            android:id="@+id/et_email"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:layout_alignLeft="@+id/et_registerName"
            android:layout_alignRight="@+id/et_registerName"
            android:layout_below="@+id/et_rePwd"
            android:layout_marginTop="0.5dp"
            android:background="@drawable/shape_edit"
            android:ems="11"
            android:hint="@string/email"
            android:inputType="textPassword" />

        <EditText
            android:id="@+id/et_phone"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:layout_alignLeft="@+id/et_registerName"
            android:layout_alignRight="@+id/et_registerName"
            android:layout_below="@+id/et_email"
            android:layout_marginTop="0.5dp"
            android:background="@drawable/shape_edit"
            android:ems="11"
            android:hint="@string/phonenum"
            android:inputType="textPassword" />



        <Button
            android:id="@+id/btn_register"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignLeft="@+id/et_registerName"
            android:layout_alignRight="@+id/et_registerName"
            android:layout_below="@+id/et_phone"
            android:layout_marginTop="30dp"
            android:background="@drawable/shape"
            android:text="@string/register"
            android:textColor="#fff" />
    </RelativeLayout>

    <Button
        android:id="@+id/btn_hasAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:text="Has Account"
        android:background="@null"
        android:textColor="#fff" />

</RelativeLayout>